<p id="notice"><%= notice %></p>

<h1>Attendants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Occupation</th>
      <th>Interest</th>
      <th>Annotations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendants.each do |attendant| %>
      <tr>
        <td><%= attendant.name %></td>
        <td><%= attendant.email %></td>
        <td><%= attendant.phone %></td>
        <td><%= attendant.occupation %></td>
        <td><%= attendant.interest %></td>
        <td><%= attendant.annotations %></td>
        <td><%= link_to 'Show', attendant %></td>
        <td><%= link_to 'Edit', edit_attendant_path(attendant) %></td>
        <td><%= link_to 'Destroy', attendant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendant', new_attendant_path %>
